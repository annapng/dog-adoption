<div class="row pt-5 pb-3 my-5 signup"> 
  <h2 class="signup text-center">Sign Up</h2>
  <form class="form text-center signup-form">
    <div class="form-group col-form-label col-form-label-lg">
      <input class="form-input" type="text" placeholder="Username" id="name-signup" />
    </div>
     <div class="form-group col-form-label col-form-label-lg">
        <input class="form-input" type="text" placeholder="Email" id="email-signup" />
      </div>
    <div class="form-group col-form-label col-form-label-lg">
      <input class="form-input" type="password" placeholder="Password" id="password-signup" />
    </div>

    <div class="form-group col-form-label col-form-label-lg">
      <button class="btn btn-dark" type="submit">Sign Up</button>
    </div>
  </form>
  <div>
    <a class="loginLink" href="/login">Already have an account, log in instead</a>
  </div>
</div>

<script src="./js/signup.js"></script>