<!-- Log In Page -->
<div class="row pt-5 pb-3 my-5 signup">
  <div class="col justify-content-center">
    <h2 class="login text-center">Login</h2>
    <form class="form text-center login-form">
      <div class="form-group col-form-label col-form-label-lg">
        <input class="form-input" type="text" placeholder="Email" id="email-login" />
      </div>
      <div class="form-group col-form-label col-form-label-lg">
        <input class="form-input" type="password" placeholder="Password" id="password-login" />
      </div>
      <div class="form-group col-form-label col-form-label-lg">
        <button class="btn btn-dark" type="submit">Login</button>
      </div>
       </form>
      <div>
        <a class="loginLink" href="/signup">Sign Up Instead</a>
      </div>
  </div>
</div>

<script src="./js/login.js"></script>